{
  "name": "glossary",
  "type": "module",
  "version": "0.1.0",
  "description": "My personal website built with Astro, Qwik, Tailwind CSS, MDX, and the Github API",
  "private": true,
  "repository": "git@github.com:princemuel/glossary.git",
  "author": "princemuel <vansomecsam@gmail.com>",
  "scripts": {
    "build": "dotenvx run -- react-router build",
    "dev": "dotenvx run -- react-router dev",
    "start": "dotenvx run -- react-router-serve ./build/server/index.js",
    "lint": "biome check --fix --unsafe --no-errors-on-unmatched --files-ignore-unknown=true .",
    "typecheck": "react-router typegen && tsc",
    "clean": "rm -rvf ./build"
  },
  "dependencies": {
    "@conform-to/react": "^1.3.0",
    "@conform-to/zod": "^1.3.0",
    "@dotenvx/dotenvx": "^1.39.1",
