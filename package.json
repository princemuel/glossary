    "@react-router/node": "^7.5.0",
    "@react-router/serve": "^7.5.0",
    "@t3-oss/env-core": "^0.12.0",
    "isbot": "^5.1.25",
    "outvariant": "^1.4.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router": "^7.5.0",
    "tailwind-variants": "^1.0.0",
    "zod": "^3.24.2"
  },
  "packageManager": "pnpm@10.7.1",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
