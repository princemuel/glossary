{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "astro/tsconfigs/strictest",
  "exclude": ["ignored/**", "dist"],
  "compilerOptions": {
    "incremental": true,
    "noErrorTruncation": true,
    "exactOptionalPropertyTypes": false,
    "tsBuildInfoFile": "./node_modules/tsconfig.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
